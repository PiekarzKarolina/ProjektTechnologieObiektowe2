                                </CheckBox>
                                <CheckBox fx:id="colorBlue" layoutX="52.0" layoutY="172.0" mnemonicParsing="false"
                                          onAction="#handleColor" scaleX="1.5" scaleY="1.5">
                                    <effect>
                                        <ColorAdjust hue="-1.0" saturation="1.0"/>
                                    </effect>
                                </CheckBox>
                                <CheckBox fx:id="colorPink" layoutX="220.0" layoutY="172.0" mnemonicParsing="false"
                                          onAction="#handleColor" scaleX="1.5" scaleY="1.5">
