                                        <ColorAdjust contrast="0.03" hue="-0.37" saturation="0.65"/>
                                    </effect>
                                </CheckBox>
                                <CheckBox fx:id="colorGreen" layoutX="140.0" layoutY="172.0" mnemonicParsing="false"
                                          onAction="#handleColor" scaleX="1.5" scaleY="1.5">
